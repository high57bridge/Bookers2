<div class="container px-5 px-sm-0">
   <div class="row">
    <div class="col-md-3">
     <h3>Bookers</h3>
<h2 class="px-3">User info</h2>
 <table>
   <thead>
     <tr>
   <td><%= image_tag 'no_image.jpg' %></td>
     </tr>
   </thead>
   <thead>
     <tr>
      <th class="px-3">name</th>
      <td><%= @user.name %></td>
      <th colspan="2"></th>
     </tr>
   </thead>
   <thead>
     <tr>
      <th class="px-3">introduction</th>
      <td><%= @user.introduction %></td>
      <th colspan="2"></th>
     </tr>
   </thead>
</table>

<a class="btn btn-outline-secondary btn-block edit_user_id"></a>

<h2>New book</h2>
<% if @book.errors.any? %>
   <%= @book.errors.count %> errors prohibited this obj from being saved:
   <ul>
     <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %>
   </ul>
 <% end %>

 <%= form_with model: @book do |f| %>
  <h4>Title<br>
  <%= f.text_field :title %></h4>
  <h4>Opinion<br>
  <%= f.text_area :body %></h4>
  <%= f.submit 'Create Book' %>
<% end %>
</div>

<div class="offset-md-1">
<div class="col-md-8">
   <h2>Book detail</h2>
<table>
    <thead>
    <tr>
      <td><%= image_tag 'no_image.jpg' %></td>
      <td class="px-3"><%= @book.title %></td>
      <td class="px-3"><%= @book.body %></td>
      <td class="px-3"><%= link_to "Edit", edit_book_path(@book.id) %></td>
      <td class="px-3"><%= link_to "Destroy", books_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    </thead>
</table>
</div>
</div>
</div>
</div>