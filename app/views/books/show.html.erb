 <table class="table">
  <div class="row">
    <%= link_to edit_user_path(@book.user_id), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
</table>

<h2>New book</h2>
    <% if @book.errors.any? %>
