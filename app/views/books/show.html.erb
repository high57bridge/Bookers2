<div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
      <h2 class="px-3">User info</h2>
        <table>
          <thead>
            <tr>
            <td><%= image_tag 'no_image.jpg' %></td>
            </tr>
          </thead>
          <thead>
            <tr>
            <th class="px-3">name</th>
            <td><%= @user.name %></td>
            <th colspan="2"></th>
            </tr>
          </thead>
          <thead>
            <tr>
            <th class="px-3">introduction</th>
            <td><%= @user.introduction %></td>
            <th colspan="2"></th>
            </tr>
          </thead>
        </table>
        
<li class="nav-item">
  <a class="btn btn-outline-secondary btn-block edit_user_id">
    <%= link_to users_edit_path, class: 'nav-link text-light' do %>
      <i class="fa fa-user_gear"></i></a>
    <% end %></li>
<h2 class="mt-3">New book</h2>
    <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
    <% end %>

    <%= form_with model: @book do |f| %>
      <p>Title<br>
    <%= f.text_field :title %></p>
      <p>Opinion<br>
    <%= f.text_area :body %></p>
    <%= f.submit 'Create Book' %>
    <% end %>
    </div>
    
    <div class="offset-md-1">
<div class="col-md-8">
   <h2>Book detail</h2>
<table>
    <thead>
    <tr>
      <td><%= image_tag 'no_image.jpg' %></td>
      <td class="px-3"><%= @book.title %></td>
      <td class="px-3"><%= @book.body %></td>
      <td class="px-3"><%= link_to "Edit", edit_book_path(@book.id) %></td>
      <td class="px-3"><%= link_to "Destroy", books_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    </thead>
</table>
</div>
</div>
</div>
</div>

