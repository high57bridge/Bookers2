<h3>Bookers</h3>

<div class="row">
  <div class="col-md-3">
 <h2 class="px-3">User info</h2>
 <table>
   <thead>
     <tr>
   <td><%= image_tag 'no_image.jpg' %></td>
   </tr>
   </thead>
    <thead>
    <tr>
      <th class="px-3">name</th>
      <td><%= @user.name %></td>
      <th colspan="2"></th>
    </tr>
    </thead>
    <thead>
    <tr>
      <th class="px-3">introduction</th>
      <td><%= @user.introduction %></td>
      <th colspan="2"></th>
    </tr>
    </thead>
  </div>


 <div class="col-8.offset-md-1">
 <table>
   <h2 class="px-3">Books</h2>
    <thead>
    <tr>
      <th colspan="3"></th>
      <th class="px-3">Title</th>
      <th class="px-3">Opinion</th>
    </tr>
    </thead>
<tbody>
  <% @books.each do |book| %>
  <div>
    <td><%= image_tag 'no_image.jpg' %></td>
    <td class="px-12"><%= book.title %></td>
    <td class="px-12"><%= book.body %></td>
  </tr>
<% end %>
</tbody>
</table>
  </div>
</div>

 <h2>New book</h2>
 <% if @book.errors.any? %>
   <%= @book.errors.count %> errors prohibited this obj from being saved:
   <ul>
     <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %>
   </ul>
 <% end %>

 <%= form_with model: @book do |f| %>
  <h4>Title<br>
  <%= f.text_field :title %></h4>
  <h4>Opinion<br>
  <%= f.text_area :body %></h4>
  <%= f.submit 'Create Book' %>
<% end %>

<footer class="footer row pt-3 justify-content-center">CopyRight Infratop.inc</footer>