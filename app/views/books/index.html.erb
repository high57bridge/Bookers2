<div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
<table>
  <thead>
    <tr>
      <h2 class="px-3">User info</h2>
      <td><%= image_tag 'no_image.jpg' %></td>
      </tr>
  </thead>
  <thead>
    <tr>
      <th class="px-3">name</th>
      <td><%= @user.name %></td>
      <th colspan="2"></th>
    </tr>
  </thead>
  <thead>
    <tr>
      <th class="px-3">introduction</th>
      <td><%= @user.introduction %></td>
      <th colspan="2"></th>
    </tr>
  </thead>
 </table>
<a class="btn btn-outline-secondary btn-block edit_user_id" href="/users/id/edit">
    <svg class="svg-inline--fa fa-userr-gear"></svg></a>
<h2 class="mt-3">New book</h2>
 <% if @book.errors.any? %>
   <%= @book.errors.count %> errors prohibited this obj from being saved:
   <ul>
     <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %>
   </ul>
 <% end %>

 <%= form_with model: @book do |f| %>
  <h4>Title<br>
  <%= f.text_field :title %></h4>
  <h4>Opinion<br>
  <%= f.text_area :body %></h4>
  <%= f.submit 'Create Book' %>
 <% end %>
</div>

<div class="offset-md-1">
<div class="col-md-8">
    <h2>Books</h2>
    <table>
        <thead>
            <tr>
            <th colspan="3"></th>
            <th>Title</th>
            <th>Opinion</th>
            </tr>
        </thead>
        <tbody>
            <tr>
              <% @books.each do |book| %>
            <td><%= image_tag 'no_image.jpg' %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            </tr>
              <% end %>
        </tbody>
    </table>
</div>
</div>
</div>
</div>
