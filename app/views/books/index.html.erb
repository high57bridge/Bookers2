<div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <% if current_user %>
      <h2>User info</h2>
        <table>
          <thead>
            <%= image_tag 'no_image.jpg' %>
            <tr>
            <th class="px-3">name</th>
            <td><%= current_user.name %></td>
            <th colspan="2"></th>
            </tr>
          </thead>
          <thead>
            <tr>
            <th class="px-3">introduction</th>
            <td><%= current_user.introduction %></td>
            <th colspan="2"></th>
            </tr>
          </thead>
        </table>
        <% end %>


  <a class="btn btn-outline-secondary btn-block">
    <%= link_to users_path do %>
      <i class="fa fa-user_gear"></i></a>
    <% end %>

<h2 class="mt-3">New book</h2>
    <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
    <% end %>

    <%= form_with model: @book do |f| %>
      <p>Title<br>
    <%= f.text_field :title %></p>
      <p>Opinion<br>
    <%= f.text_area :body %></p>
    <%= f.submit 'Create Book' %>
    <% end %>
    </div>

  <div class="offset-md-1">
<div class="col-md-8">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
        <thead>
            <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
              <% @books.each do |book| %>
            <td><%= image_tag 'no_image.jpg' %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            </tr>
              <% end %>
        </tbody>
    </table>
</div>
</div>
    </div>
  </div>



