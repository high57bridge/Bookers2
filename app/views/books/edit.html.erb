<h1>Editing Book</h1>

<% if @book.errors.any? %>
   <%= @book.errors.count %> errors prohibited this book from being saved.
   <ul>
     <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
   </ul>
  <% end %>
<% end %>
  
<%= form_with model: @book do |f| %>

  <h4>Title<br>
  <%= f.text_field :title %></h4>
  <h4>Opinion<br>
  <%= f.text_area :body %></h4>
  <%= f.submit 'Update Book' %>
<% end %>

