<div class="container px-5 px-sm-0">
  <% if @book.errors.any? %>
  <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
      <% end %>
    </ul>
      <% end %>
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <table class="table">
          <thead>
            <tr>
            <td><%= image_tag 'no_image.jpg' %></td>
            </tr>
            <tr>
            <th>name</th>
            <th><%= @user.name %></th>
            <th colspan="2"></th>
            </tr>
            <tr>
            <th>introduction</th>
            <th><% @user.introduction %></th>
            <th colspan="2"></th>
            </tr>
          </thead>
        </table>

  <%= link_to edit_user_path(@user.id), class: "btn btn-light btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>

    <h2>New book</h2>
    <%= form_with model: @book do |f| %>
      <p>Title<br>
    <%= f.text_field :title %></p>
      <p>Opinion<br>
    <%= f.text_area :body %></p>
    <%= f.submit 'Create Book', class: 'btn btn-success' %>
    <% end %>
  </div>

<div class="col-md-8 offset-md-1">
    <h2>Users</h2>
      <table class="table table-hover table-inverse">
      <thead>
        <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
        <td><%= image_tag 'no_image.jpg' %></td>
        <td><%= @user.name %></td>
        <td><%= @user.introduction %></td>
        <td><%= link_to "Show", user_path(@user.id) %></td>
        </tr>
      </tbody>
      </table>
      </div>
    </div>
  </div>
</div>




