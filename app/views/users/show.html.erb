<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p><%= link_to "Editing Profile", user_path %></p>
</div>

<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <%= image_tag book.get_image %>
  <% end %>
  <p>Posted User Image: <%= image_tag book.user.get_profile_image(100,100) %></p>
  <p>name: <%= book.title %></p>
  <p>introduction: <%= book.body %></p>
  <p>User info: <%= book.user.name %></p>
</div>
<% end %>

